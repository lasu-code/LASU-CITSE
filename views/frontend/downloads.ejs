<!DOCTYPE html>
<html lang="en">

<head>
     <%- include('../partials/frontend-head', { title: 'Downloads' }) %>
</head>

<body>
    <!-- Preloader -->
    <% include ../partials/navbar.ejs %>

    <!-- ***** Breadcumb Area Start ***** -->
    <section class="breadcumb-area bg-img gradient-background-overlay">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-content">
                        <h3 class="breadcumb-title">Downloads</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Breadcumb Area End ***** -->
    <section class="our-skills-area text-center section-padding-50-0">
        <div class="container">
            <div class="row mb-5">
            <% for (let i = 0; i < files.length; i++) { %>
                <div class="col-sm-12 mb-5">
                    <div class="pb-1 col-sm-3 col-xs-12 d-flex justify-content-center border border-left-0 border-top-0 border-bottom-0 mr-4 float-left">
                        <a href="<%= files[i].postImage %>" class="btn btn-success btn-lg">
                            <i class="fa fa-download"></i> Download file
                        </a>
                    </div>
                    <div class="col-sm-8 col-xs-12 float-left">
                        <h3 class="col d-flex justify-content-left"><%- files[i].name %></h3>
                        <div class="col d-flex justify-content-left lead"><%- files[i].content %></div>
                        <p class="mb-1 mt-0 mr-3 text-info text-left pl-3">Published @ <%= files[i].createdDate.toLocaleString() %></p>
                    </div>
                </div>
                <% if (i != files.length-1) { %>
                    <hr class="pt-5 pb-2 col"/>
                <% } %>
            <% } %>
            </div>
        </div>
    </section>

    <% include ../partials/footer.ejs %>

    <% include ../partials/frontend-scripts %>

</body>
</html>