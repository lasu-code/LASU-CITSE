<div class="form-group row">
    <label for="<%= fieldname %>" class="col-sm-3 text-right control-label col-form-label"><%= fieldlabel %></label>
    <div class="col-sm-9">
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="validatedCustomFile" required="" name="<%= fieldname %>">
            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
            <div class="invalid-feedback">Example invalid custom file feedback</div>
            <% if (valueField) { %>
            <img src="<%= valueField %>" class="p-2 mt-2" height='50px' />
            <a href="<%= valueField %>">Click to Preview current image </a>
            <% } %>
        </div>
    </div>
</div>
