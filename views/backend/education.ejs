<!doctype html>
<html lang="en">

<head>
    <%- include('../partials/dashboard-head', {pagename: 'Edit Education'}) %>
</head>

<body>
    <%- include('../partials/dashboard-nav') %>

    <div class="container-fluid">
        <div class="row">

            <!-- sidebar -->
            <%- include('../partials/sidebar.ejs', {active: 'education'}) %>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3">
                    <h1 class="h2">Education CMS</h1>
                </div>

                <!-- <form action="/posteducation" method="POST" enctype=multipart/form-data class="col-lg-10 col-md-10 col-sm-10 col-xs-10"> -->
                <form action="/posteducation" style = "<%if(result.length == 0) {%> display: block   <% } else if(result.length > 0) {%> display: none <% }%>"  method="POST" enctype=multipart/form-data class="col-lg-10 col-md-10 col-sm-10 col-xs-10">


                    <%- include('../fields/file', { fieldname: 'newImg', fieldlabel: 'News Header Image'}); %>

                    <%- include('../fields/textarea', { fieldname: 'content', fieldlabel: 'News Content' fieldid: 'editor'}); %>
                                       
                    <%- include('../fields/filename', { fieldname: 'name', fieldplaceholder: 'Education', valueField: 'education'}); %>                   


                    <%- include('../fields/button', { fieldvalue: 'Upload News'}); %>
                </form>

                <form action="/updateEducation?_method=PUT" style = "<%if(result.length == 0) {%> display: none   <% } else if(result.length > 0) {%> display: block <% }%>" method="POST" enctype=multipart/form-data class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                  
                    
                    <%- include('../fields/file', { fieldname: 'newImg', fieldlabel: 'News Header Image'}); %>

                    <%- include('../fields/textarea', { fieldname: 'content', fieldlabel: 'News Content', fieldid: 'editor1'}); %>

                    <%- include('../fields/filename', { fieldname: 'name', fieldplaceholder: 'education', valueField: 'education' }); %>                   

                    <%- include('../fields/button', { fieldvalue: 'Upload justification'}); %>
                    
                </form>

                <span style="display: none" id="upload">
                    <%=upload%>
                </span>
    <span style="display: none" id="failure">
                    <%=failure%>
                </span>

                <br> <br>
            </main>
        </div>
    </div>

    <%- include('../partials/dashboard-scripts') %>
    <script src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        // Init Ckeditor
        CKEDITOR.replace('editor');
        CKEDITOR.replace('editor1');


         if ($.trim($('#failure').text()).length !== 0) {
            alert("<%=failure%>")
        }
        if ($.trim($('#upload').text()).length !== 0) {
            alert("<%=upload%>")
        }
    </script>
</body>

</html>