<!doctype html>
<html lang="en">

<head>
    <%- include('../partials/dashboard-head', {pagename: 'Edit News'}) %>
</head>

<body>
    <%- include('../partials/dashboard-nav') %>

    <div class="container-fluid">
        <div class="row">
            <!-- sidebar -->
            <%- include('../partials/sidebar.ejs', {active: 'settings'}) %>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3">
                    <h1 class="h2">CMS Settings</h1>
                </div>

                <form action="/postdashboard/settings" method="POST" enctype=multipart/form-data class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                    <%- include('../fields/text', { fieldname: 'siteName', fieldplaceholder: 'Site Name', fieldlabel: 'Site Name', valueField: ''}); %>

                    <%- include('../fields/file', { fieldname: 'siteLogo', fieldlabel: 'Site Logo', valueField: ''}); %>

                    <%- include('../fields/hidden', { fieldname: 'tag', valueField: 'settings' }); %>

                    <%- include('../fields/button', { fieldvalue: 'Upload settings'}); %>
                </form>

                    <form action="/postaddress" method="POST"  class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                    <%- include('../fields/email', { fieldname: 'email', fieldplaceholder: 'Recipient Email Address', fieldlabel: 'Recipient Email Address', valueField: ''}); %>

                    <%- include('../fields/button', { fieldvalue: 'Upload Address'}); %>
                </form>
            </main>
        </div>
    </div>

    <span style="display: none" id="upload">
        <%=upload%>
    </span>

    <%- include('../partials/dashboard-scripts') %>

    <script type="text/javascript">
        // Show success alert
        if ($.trim($('#upload').text()).length !== 0) {
            alert("<%=upload%>")
        }
    </script>
</body>

</html>