    <title>Dashboard Template for Bootstrap</title>

     <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" rel="stylesheet">

    <style>
      .Mbody{
        border: 3px solid blue;
        border-radius: 10px;
        margin: 5px  20px;
      }

      .label{
        font-style: italic;
        padding: 10px 0px;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-dark fixed-top bg-light flex-md-nowrap p-0 shadow">
      <img src="/img/bg-img/admin.png" alt=""> <h5 style="color: black; padding-right:60px">Administrator</h5>
      <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <a class="nav-link" href="/logout" style="color:black">Sign out</a>
        </li>
      </ul>
    </nav>


    <% include ../partials/sidebar.ejs %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Messages</h1>
          
        </div>

        <h2>Messages from Users</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th> <b>NAMES</b> </th>
                  <th> <B>EMAILS</B> </th>
                  <th> <b>MESSAGES</b> </th>
                  
                  
                </tr>
              </thead>
              <tbody>
                    <% for(let i=0; i < result.length; i++){ %>

                <tr>

                  <td><%= result[i].name %></td>
                  <td><%= result[i].email %></td>
                  <td><button type="button" data-toggle="modal" class="btn" style="background-color: #31B0D5; color: white" class="details"
                    data-target="#myModal<%=[i]%>">read
                    message</button> 
                  </td>
                  
                </tr>

                <!-- modal -->
                <div class="modal fade" id="myModal<%=[i]%>" role="dialog">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <!-- conntent goes here -->
                    <div class="modal-content">
                      <div class="modal-header">
                        <h4 class="modal-title">
                          MESSAGE FROM <%= result[i].name%>

                        </h4>
                        <button class="close" type="button" data-dismiss="modal" aria-label="close">
                          <span aria-hidden="true">&times;</span>
                            
                        </button>
                      </div>
                      <div class="modal-body Mbody">
                        <label for="message" class="label">message
                        <%=result[i].message%>
                        </label>
                      </div>
                      <br> <hr>

                      <div>
                        <h3 style="margin:0px 15px;">reply <%= result[i].name%></h3>
                        <div class="form-group" style="margin: 0px 30px">
                          <form action="/reply" method="POST">
                              <label for="reply" class="label">reply:</label>
                              <input type="hidden" name="userMail" value=<%= result[i].email %>>
                              <textarea name="reply" class="form-control" cols="10" rows="10" id="reply" ></textarea>
                              <br>
                              <button class="btn btn-primary" type="submit">post</button>
                          </form>
                      </div>
                      </div>
                      <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">
                          close
                        </button>
                      </div>
                    </div>

                  </div>

                </div>

                <% } %>


              </tbody>




              <script>
                $('#myModal').on('shown.bs.modal', function(){
                  $('#myInput').trigger('focus')
                })
              </script>

