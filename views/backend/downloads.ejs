<!doctype html>
<html lang="en">
<head>
    <%- include("../partials/dashboard-head", {pagename: "Downloads"}) %>
</head>

<body>
    <%- include("../partials/dashboard-nav") %>

    <div class="container-fluid">
        <div class="row">
            <%- include("../partials/sidebar.ejs", {page: "downloads", activeParent: "admission"}) %>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3">
                    <h1 class="h2">Downloads CMS</h1>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-nd-12 col-sm-12 col-xs-12 px-0">
                            <a href="/dashboard/download/add" class="btn btn-primary">Add Download File <span class="fa fa-plus-circle"></span></a>
                        </div>

                        <div class="col-lg-12 col-nd-12 col-sm-12 col-xs-12 px-0">
                            <hr class="border-secondary pt-1" />
                        </div>

                        <h3 class="col-lg-12 col-nd-12 col-sm-12 col-xs-12">All Downloads</h3>

                        <div class="col mt-3 pl-2">
                        <% for(let i=0; i < result.length; i++) { %>
                            <div class="col px-2 mb-4"><div class="border mb-4 px-0 py-3 row">
                                <div class="pb-1 col-sm-3 col-xs-12 d-flex justify-content-center border border-left-0 border-top-0 border-bottom-0 mr-4" style="align-items:center">
                                    <a href="<%= result[i].postImage %>" class="btn btn-success btn-lg">
                                        <i class="fa fa-download"></i> Download file
                                    </a>
                                </div>
                                <div class="col-sm-8 col-xs-12">
                                    <h3><%- result[i].name %></h3>
                                    <div class="justify-content-left d-flex">
                                        <p class="mb-1 mt-0 btn mr-3">
                                            <i class="fa fa-check-circle"></i> <%- (result[i].is_active == 1) ? "<span class='text-success'>Published</span>" : "<span class='text-warning'>Draft</span>" %> @ <%= result[i].createdDate.toLocaleString() %></p>
                                        <a class="btn btn-primary float-left mr-3" href="/dashboard/download/edit/<%= result[i]._id %>">Edit File</a>
                                        <form action="/dashboard/download/delete/<%= result[i]._id %>?_method=DELETE" method="POST" class="form-inline float-left">
                                            <input type="hidden" name="id" value="<%=result[i]._id%>">
                                            <input type="submit" class="btn btn-danger delete-item" value="Delete">
                                        </form>
                                    </div>
                                </div>
                            </div></div>
                        <% }%>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <%- include("../partials/dashboard-scripts") %>
</body>
</html>
