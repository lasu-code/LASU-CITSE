<!doctype html>
<html lang="en">
<head>
    <%- include('../partials/dashboard-head', {pagename: 'Add/Edit News'}) %>
</head>

<body>
    <%- include('../partials/dashboard-nav') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/sidebar.ejs', {page: 'news'}) %>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3">
                   <h1 class="h2 rw"><%= (typeof action != 'undefined') ? 'Edit' : 'Create' %> Page Content: <span class="text-info">NEWS</span></h1>
                </div>

                <form action="<%= (typeof action != 'undefined') ? action : '/dashboard/news/add' %>" method="post" enctype="multipart/form-data" class="col-lg-10 col-md-10 col-sm-10 col-xs-10">

                    <%- include('../fields/text', { fieldname: 'title', fieldlabel: 'News Title', valueField: (typeof result != 'undefined') ? result.title : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/file', { fieldname: 'newsImage', fieldlabel: 'News Header Image', valueField: (typeof result != 'undefined') ? result.newsImage : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/textarea', { fieldname: 'summary', fieldlabel: 'News Summary', valueField: (typeof result != 'undefined') ? result.summary : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/textarea', { fieldname: 'content', fieldlabel: 'Details', valueField: (typeof result != 'undefined') ? result.content : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/text', { fieldname: 'author', fieldlabel: 'Author', valueField: (typeof result != 'undefined') ? result.author : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/text', { fieldname: 'tags', fieldlabel: 'Tags', valueField: (typeof result != 'undefined') ? result.tags : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/text', { fieldname: 'meta_keyword', fieldlabel: 'SEO Keyword', valueField: (typeof result != 'undefined') ? result.meta_keyword : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/textarea', { fieldname: 'meta_desc', fieldlabel: 'SEO Description', valueField: (typeof result != 'undefined') ? result.meta_desc : '' }); %>

                    <hr class="my-4"/>
                    <%- include('../fields/radio', { fieldname: 'is_visible', fieldlabel: 'Is Published', valueField: (typeof result != 'undefined') ? result.is_visible : 1 }); %>

                    <hr class="my-4"/>
                    <div class="col-sm-10 ml-md-auto px-0">
                        <%- include('../fields/button', { fieldvalue: (typeof action != 'undefined') ? 'UPDATE NEWS' : 'CREATE NEWS' }); %>
                        <a href="/dashboard/news" class="btn btn-success pull-right"><i class="fa fa-caret-left pr-2"> </i>Back to List</a>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <%- include('../partials/dashboard-scripts') %>
    <script type="text/javascript">
        CKbasic('summary');
        CKfull('content');
        CKbasic('meta_desc');
    </script>
</body>
</html>
