<!doctype html>
<html lang="en">

<head>
    <%- include('../partials/dashboard-head', {pagename: 'Edit Research Plan'}) %>
</head>

<body>
    <%- include('../partials/dashboard-nav') %>

    <div class="container-fluid">
        <div class="row">

            <!-- sidebar -->
            <%- include('../partials/sidebar.ejs', {active: 'research-p'}) %>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3">
                    <h1 class="h2">Research Plan CMS</h1>
                </div>

                <form action="/postresearch-plan" style = "<%if(result.length == 0) {%> display: block   <% } else if(result.length > 0) {%> display: none <% }%>" method="POST" enctype=multipart/form-data class="col-lg-10 col-md-10 col-sm-10 col-xs-10">

                    <%- include('../fields/file', { fieldname: 'newImg', fieldlabel: 'News Header Image'}); %>

                    <%- include('../fields/textarea', { fieldname: 'content', fieldlabel: 'News Content', fieldid: 'editor'}); %>
                                     
                    <%- include('../fields/filename', { fieldname: 'name', fieldplaceholder: 'research-plan', valueField: 'research-plan' }); %>                   


                    <%- include('../fields/button', { fieldvalue: 'Upload'}); %>
                </form>
               <form action="/updateresearch-plan?_method=PUT" style = "<%if(result.length == 0) {%> display: none   <% } else if(result.length > 0) {%> display: block <% }%>" method="POST" enctype=multipart/form-data class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                  
                    
                    <%- include('../fields/file', { fieldname: 'newImg', fieldlabel: 'News Header Image'}); %>

                    <%- include('../fields/textarea', { fieldname: 'content', fieldlabel: 'News Content', fieldid: 'editor1'}); %>

                    <%- include('../fields/filename', { fieldname: 'name', fieldplaceholder: 'research-plan', valueField: 'research-plan' }); %>                   

                    <%- include('../fields/button', { fieldvalue: 'Upload'}); %>
                    
                </form>

                <span style="display: none" id="upload">
                    <%=upload%>
                </span>

                 <span style="display: none" id="failure">
                    <%=failure%>
                </span>

                 <span style="display: none" id="success">
                    <%=success%>
                </span>
                    <br> <br>
            </main>
        </div>
    </div>

    <%- include('../partials/dashboard-scripts') %>
    <script src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        // Init Ckeditor
        
        CKEDITOR.replace('editor');
        CKEDITOR.replace('editor1');
        

                // Show success alert
        if ($.trim($('#upload').text()).length !== 0) {
            alert("<%=upload%>")
        }
          
      if($.trim($('#failure').text()).length !== 0) {
        alert("<%=failure%>")
      }
     if($.trim($('#success').text()).length !== 0) {
          alert("<%=success%>")
      }

    </script>
</body>


</html>