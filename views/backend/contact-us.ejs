<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <%- include('../partials2/head', {pagename: 'Contact-Us'}) %>
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">
        <!-- ============================================================== -->
        <!-- Topbar header - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <%- include('../partials2/navbar') %>
        <!-- ============================================================== -->
        <!-- End Topbar header -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <%- include('../partials2/aside') %>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Edit Page: <span class="text-info">Contact-Us</span></h4>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Sales Cards  -->
                <!-- ============================================================== -->
                <div class="container">
                    <div class="card">
                        <form class="form-horizontal" action="<%= req_url %>" method="post" enctype="multipart/form-data">
                            <div class="card-body">
                                <%- include('../fields/textarea', { fieldname: 'address', fieldlabel: 'Address', valueField: (content) ? content.address : ''}); %>
                                
                                <%- include('../fields/text', { fieldname: 'phone', fieldlabel: 'Phone Number', valueField: (content) ? content.phone : false }); %>
                                
                                <%- include('../fields/text', { fieldname: 'email', fieldlabel: 'Email Address', valueField: (content) ? content.email : false }); %>
                                
                                <%- include('../fields/text', { fieldname: 'mapLongitude', fieldlabel: 'Longitude Coordinates', valueField: (content) ? content.mapLongitude : false }); %>
                                
                                <%- include('../fields/text', { fieldname: 'mapLatitude', fieldlabel: 'Latitude Coordinates', valueField: (content) ? content.mapLatitude : false }); %>
                                
                                <%- include('../fields/hidden', { fieldname: 'id', valueField: (content) ? content._id : '' }); %>
                            </div>

                            <%- include('../fields/button', { fieldvalue: 'UPDATE CONTENT' }); %>
                        </form>
                    </div>

                </div>
                <!-- ============================================================== -->
                <!-- Recent comment and chats -->
                <!-- ============================================================== -->
            </div>
            <br>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center">
                All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        // Init Ckeditor
        CKEDITOR.replace('address', {
            toolbar: [
                { name: 'basic', items: ['Bold', 'Italic', 'Underline', '-', 'Copy', 'Cut', 'Paste', 'PasteText', 'PasteFromWord', '-', 'NumberedList', 'BulletedList', '-', 'SelectAll', 'RemoveFormat', 'Undo', 'Redo'] },
            ],
            height: '200'
        });

        // Show POST success alert
        if ($.trim($('#upload').text()).length !== 0) {
            alert("<%=upload%>")
        }

        // Show POST error alert
        if ($.trim($('#failure').text()).length !== 0) {
            alert("<%=failure%>")
        }

    </script>
    <%- include('../partials2/cmsScripts') %>


</body>

</html>